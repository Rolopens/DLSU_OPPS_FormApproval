<!DOCTYPE html>
<html>

<head>
    <title>Approver Dashboard</title>
    <!-- external links -->
    <!--<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet" />
    <script src="lib/axios.min.js" type="application/javascript">


    </script>

    <!-- stylesheet -->
    <link rel="stylesheet" type="text/css" href="css/theme.css" />
    <link rel="stylesheet" type="text/css" href="css/variables.css" />
    <link rel="stylesheet" type="text/css" href="css/approver.css" />
    <link rel="stylesheet" type="text/css" href="css/user_dropdown.css" />
    <!-- element-stylesheet -->
    <link rel="stylesheet" type="text/css" href="css/element-stylesheet/flex.css" />
    <link rel="stylesheet" type="text/css" href="css/element-stylesheet/button.css" />
    <link rel="stylesheet" type="text/css" href="css/element-stylesheet/field.css" />

    <!-- javascript -->
    <script src="js/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="js/approver.js" type="text/javascript"></script>
</head>

<body>
    <div id="preacts">
        <%- include("nav_bar.ejs", this) %>
            <nav id="secondary-nav">
                <img src="assets/svg/logo_opps-logo-white.svg" id="system-logo" />
                <br/><br/>
                <div class="filter-wrapper">
                    <div class="filter-title">
                        <i class="fa fa-filter fa-2x"></i>
                        <span>&nbsp;&nbsp;&nbsp;College Filter:</span>
                    </div>
                    <hr/>
                    <ul>
                        <li v-for="item in filter.colleges">
                            <label>
								<input type="checkbox" />
								<span class="checkmark"><i class="fa fa-check"></i></span>
								<span>{{item}}</span>
							</label>
                        </li>
                    </ul>
                </div>
            </nav>

            <header>
                <%- include("user_dropdown.ejs") %>
                    <h1 id="board-title"><i class="fa fa-file"></i> &nbsp; Pre-Activities Submission</h1>
                    <nav id="acts-nav">
                        <ul>
                            <li class="active">All (243)</li>
                            <li>Unreviewed (100)</li>
                            <li>Accepted (43)</li>
                            <li>Rejected (50)</li>
                            <li>Pending (50)</li>
                        </ul>
                    </nav>
            </header>
            <section>
                <div id="main-content">
                    <div class="content-header">
                        <div id="select-wrapper">
                           
                            <input id="search" type="text" name="search" placeholder="Search for an activity..." />
                        </div>
                    </div>
                    <div class="content-feed">
                        <div class="content-feed" v-if="forms.length == 0">
                            No Forms Yet
                        </div>
                        <div v-else v-for="form in forms">
                            <div class="content-wrapper" v-on:click="quickviewForm(form._id)">
                                <div class="activity-wrapper flex-start">
                                    <div class="activity-icon positive"><i class="fa fa-check"></i></div>
                                    <div class="activity">
                                        <h3 name="FormTitle">
                                            {{form.title}}
                                        </h3>
                                        <p name="FormDetails">
                                            {{form.org}} |
                                                {{form.startDate}}
                                        </p>
                                    </div>
                                </div>
                                <div class="goto"><i class="fa fa-angle-right fa-2x"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="sidebar">
                    <div class="content-header">
                        <h3 class="action-title">Quick View</h3>
                    </div>
                    <div id="quick-view" v-if="quickview">
                        <div class="row" data-id={{quickview._id}}>
                            <div class="column">
                                <div class="info">
                                    <h4>Title</h4>
                                    <p id="Title">{{quickview.title}}</p>
                                </div>
                                <div class="info">
                                    <h4>Nature</h4>
                                    <p id="Nature">{{quickview.nature}}</p>
                                </div>
                                <div class="info">
                                    <h4>Type</h4>
                                    <p id="Type">{{quickview.typeOfActivity}}</p>
                                </div>
                                <div class="info">
                                    <h4>Status</h4>
                                    <p id="status">{{quickview.status}}</p>
                                </div>
                            </div>
                            <div class="column">
                                <div class="info">
                                    <h4>Date</h4>
                                    <p id="startDate">{{quickview.startDate}}</p>
                                </div>
                                <div class="info">
                                    <h4>Time</h4>
                                    <p id="startTime">{{quickview.startDate}}</p>
                                </div>
                                <div class="info">
                                    <h4>Venue</h4>
                                    <p id="location">{{quickview.venue}}</p>
                                </div>
                                <br/>
                                <button class="hallow">View Activity</button>
                            </div>
                        </div>
                        <br/><br/>
                        <div class="row">
                            <div class="column">
                                <p class="action positive" id="ApproveForm" v-on:click="approveForm(quickview._id)"><i class="fa fa-check-circle"></i> &nbsp; Accept Activity</p>
                            </div>
                            <div class="column">
                                <p class="action negative" id="RejectForm" v-on:click="rejectForm(quickview._id)"><i class="fa fa-times-circle"></i> &nbsp; Reject Activity</p>
                            </div>
                        </div>
                        <br/>
                        <br/>
                    </div>
                </div>
            </section>
    </div>
    <script src="lib/vue.min.js" type="text/javascript"></script>
    <script src="js/vue_preacts.js" type="text/javascript"></script>
</body>


</html>
