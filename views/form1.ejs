<html>

<head>
  <title>Create Project Proposal</title>
  <%- include partials/scriptResources %>
  <link rel="stylesheet" href="css/form2.css">

</head>

<body>
  <div class="main ui text container">
    <div class="ui segments" style="padding: 1.2em;">
      <form action="create-form-2" method="post">
        <div class="ui grid">
          <div class="two column row">
            <div class="left floated column">
              <h1 class="ui header" style="margin-top: 0.65em;">Create Proposal Form</h1>
            </div>
            <div class="right floated column">
              <img src="assets/svg/logo_opps-logo-green.svg" />
            </div>
          </div>
        </div>

        <h3 class="labelHead">Title of the Activity <span class="red"> * </span></h3>
        <input class="inputron" type="text" name="title" required style="margin-top: -5px;">
        <br /><br />

        <div class="ui form">
          <div class="grouped fields">
            <h3 class="labelHead ui header">Nature of the Activity <span class="red"> *</span></h3>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Academic" name="nature" checked="checked">
                <label>Academic</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Special Interest" name="nature">
                <label>Special Interest</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Fundraising" name="nature">
                <label>Fundraising</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Community Engagement" name="nature">
                <label>Community Engagement</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Organizational Development" name="nature">
                <label>Organizational Development</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Issue Advocacy" name="nature">
                <label>Issue Advocacy</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Lasallian Formation/Spritual Growth" name="nature">
                <label>Lasallian Formation/Spritual Growth</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Outreach" name="nature">
                <label>Outreach</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Developmental Initiative" name="nature">
                <label>Developmental Initiative</label>
              </div>
            </div>
          </div>
        </div>
        <br />
        <div class="ui form">
          <div class="grouped fields">
            <span class="labelHead ui header">Type of the Activity <span class="red"> * </span></span>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Academic Contest" name="type" checked="checked">
                <label>Academic Contest</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Distribution" name="type">
                <label>Distribution</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="General Assembly" name="type">
                <label>General Assembly</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Seminar/Workshop" name="type">
                <label>Seminar/Workshop</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Publicity/Awareness Campaign" name="type">
                <label>Publicity/Awareness Campaign</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Meetings" name="type">
                <label>Meetings</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Spiritual Activity" name="type">
                <label>Spiritual Activity</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Recruitment/Audition" name="type">
                <label>Recruitment/Audition</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Recreation" name="type">
                <label>Recreation</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <div class="ui transparent input"><input type="radio" value="Others" name="type">
                  <label>Others</label><input type="text" name="typeOthers" style="margin-left: 10px; border-bottom: 1.5px solid !important;
                  border-bottom-color: #5e6479 !important; border-radius: 0px !important;" /></div>
                <!-- TADHG OVER HERE -->
              </div>
            </div>
          </div>
        </div>
        <br>
        <div class="ui two column grid">
          <div class="row">
            <div class="column">
              <span class="labelHead">Start Date of the Activity <span class="red"> *</span></span>

              <span class="ui calendar" id="startdate">
                <div class="ui input left icon">
                  <i class="calendar icon"></i>
                  <input type="text" name="startDate" placeholder="Start Date" autocomplete="off" required>
                </div>
              </span>
            </div>
          </div>

          <div class="two column row">
            <div class="column"><span class="labelHead">Start Time of the Activity <span class="red"> *</span></span>
              <br />
              <span class="ui calendar" id="starttime">
                <div class="ui input left icon">
                  <i class="calendar icon"></i>
                  <input type="text" name="startTime" placeholder="Start Time" autocomplete="off" required>
                </div>
              </span>
            </div>

            <div class="column">
              <span class="labelHead">End Time of the Activity
                <span class=" red"> * </span></span>
              <span class="ui calendar" id="endtime">
                <div class="ui input left icon">
                  <i class="calendar icon"></i>
                  <input type="text" name="endTime" placeholder="End Time" autocomplete="off" required>
                </div>
              </span>
            </div>
          </div> <!-- END ROW -->
        </div>

        <!-- <div class="row">
            <div class="column">
              <span class="labelHead">End Date of the Activity <span class="red"> * </span></span>
              <br />
              <span class="ui calendar" id="enddate">
                <div class="ui input left icon">
                  <i class="calendar icon"></i>
                  <input type="text" name="endDate" placeholder="End Date" autocomplete="off" required>
                </div>
              </span>
            </div>

            <div class="column">
              <span class="labelHead">End Time of the Activity <span class="red"> * </span></span>
              <span class="ui calendar" id="endtime">
                <div class="ui input left icon">
                  <i class="calendar icon"></i>
                  <input type="text" name="endTime" placeholder="End Time" autocomplete="off" required>
                </div>
              </span>
            </div>
          </div>
        </div> -->

        <br /><br />
        <div class="ui grid">
          <div class="row">
            <div class="nine wide column">
              <span class="labelHead">Venue <span class="red"> * </span></span>
              <br />
              <input class="inputron" name="venue" type="text" required>
            </div>

            <div class="three wide column">
              <span class="labelHead">ENMP <span class="red"> * </span></span>
              <br />
              <input class="inputron" name="enmp" type="number" required>
            </div>

            <div class="three wide column">
              <span class="labelHead">ENP <span class="red"> * </span></span>
              <br />
              <input class="inputron" name="emp" type="number" required>
            </div>
          </div>
        </div>

        <br /><br>
        <div class="ui form">
          <div class="grouped fields">
            <h3 class="labelHead ui header">Reach of the Activity <span class="red"> * </span></h3>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Batch Wide" name="reach" checked="checked">
                <label>Batch Wide</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="College Wide" name="reach">
                <label>College Wide</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="Organization Wide" name="reach">
                <label>Organization Wide</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="University Wide" name="reach">
                <label>University Wide</label>
              </div>
            </div>
          </div>
        </div>

        <br />
        <div class="ui form">
          <div class="grouped fields">
            <h3 class="labelHead ui header">Online Activity? <span class="red"> * </span></h3>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="yes" name="online" checked="checked">
                <label>Yes</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="no" name="online">
                <label>No</label>
              </div>
            </div>
          </div>
        </div>

        <br />
        <div class="ui form">
          <div class="grouped fields">
            <h3 class="labelHead ui header">Activity in GOSM? <span class="red"> * </span></h3>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="yes" name="GOSM" checked="checked">
                <label>Yes</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" value="no" name="GOSM">
                <label>No</label>
              </div>
            </div>
          </div>
        </div>
        <div class="ui grid">
          <div class="row">
            <div class="four wide right floated column">
              <button type="submit" class="fluid submit-button next">Next</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  <script>
    $('.ui.radio.checkbox').checkbox();

    $('.ui.sticky')
      .sticky();

    $('#startdate').calendar({
      type: 'date'
    });
    $('#starttime').calendar({
      type: 'time'
    });
    $('#enddate').calendar({
      type: 'date'
    });
    $('#endtime').calendar({
      type: 'time'
    });
  </script>
</body>

</html>