<html>
    <head>
        <title>View Form</title>

        <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
        <script src="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.js"></script>
        <link href="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="css/viewForm.css">
    </head>

    <body>

        <div id="main">

            <h1>Project Proposal</h1>

            <table style="border: none">
                <tr>
                    <th>Organization:</th>
                    <th>Title of the Activity:</th>
                </tr>
                <tr>
                    <td>{Organization Name}</td>
                    <td>{Activity Name}</td>
                </tr>
            </table>

            <br/>
            <table style="border: none">
                <tr>
                    <th>Nature of the Activity:</th>
                    <th>Type of the Activity:</th>
                </tr>
                <tr>
                    <td>{Nature}</td>
                    <td>{Type}</td>
                </tr>
            </table>

            <br/>
            <table style="border: none">
                <tr>
                    <th>Start Date of the Activity:</th>
                    <th>Start Time of the Activity:</th>
                </tr>
                <tr>
                    <td>{Start Date}</td>
                    <td>{Start Time}</td>
                </tr>
            </table>

            <br/>
            <table style="border: none">
                <tr>
                    <th>End Date of the Activity:</th>
                    <th>End Time of the Activity:</th>
                </tr>
                <tr>
                    <td>{End Date}</td>
                    <td>{End Time}</td>
                </tr>
            </table>

            <br/>
            <table style="border: none">
                <tr>
                    <th>ENMP:</th>
                    <th>ENP:</th>
                </tr>
                <tr>
                    <td>{ENMP}</td>
                    <td>{ENP}</td>
                </tr>
            </table>

            <br/>
            <table style="border: none">
                <tr>
                    <th>Venue of the Activity:</th>
                    <th>Reach of the Activity:</th>
                </tr>
                <tr>
                    <td>{Venue}</td>
                    <td>{Reach}</td>
                </tr>
            </table>

            <br/>
            <table style="border: none">
                <tr>
                    <th>Online Activity:</th>
                    <th>Activity in GOSM:</th>
                </tr>
                <tr>
                    <td>{Yes/No}</td>
                    <td>{Yes/No}</td>
                </tr>
            </table>

            <br/>
